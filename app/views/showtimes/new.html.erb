<h1>New Showtime for <%= @movie.title %></h1>

<%= form_with model: [@movie, @showtime], local: true do |form| %>
  <div>
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>
  <div>
    <%= form.label :start_time %>
    <%= form.time_field :start_time %>
  </div>
  <div>
    <%= form.label :capacity %>
    <%= form.number_field :capacity %>
  </div>
  <div>
    <%= form.submit 'Create Showtime' %>
  </div>
<% end %>