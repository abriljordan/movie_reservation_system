<div class="edit-user-container">
  <h1 class="section-title">Edit User</h1>
  <%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :email, class: 'form-label' %>
      <%= form.email_field :email, class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= form.label :role, class: 'form-label' %>
      <%= form.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, class: 'form-select' %>
    </div>
    <div class="form-group">
      <%= form.submit 'Update User', class: 'btn btn-success' %>
    </div>
  <% end %>
  
  <div class="action-links">
    <%= link_to 'Back', admin_users_path, class: 'btn btn-secondary' %>
  </div>
</div>