<div class="form-container">
  <h1>Add New Movie</h1>

  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: [:admin, @movie], class: "movie-form") do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", rows: 5 %>
    </div>

    <%= f.label :genre %>
    <%= f.select :genre, Movie::GENRES, 
        { prompt: 'Select a genre' }, 
        { class: "form-control" } 
    %>

    <div class="form-group">
      <%= f.label :poster_image %>
      <%= f.file_field :poster_image, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Create Movie", class: "submit-btn" %>
      <%= link_to "Cancel", admin_movies_path, class: "cancel-btn" %>
    </div>
  <% end %>
</div>

