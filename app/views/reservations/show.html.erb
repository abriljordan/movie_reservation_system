<% if user_signed_in? %>
  <h2>Reserve Your Seats</h2>

  <%# Display reservation options here %>
  <%# For example, form fields to select number of seats, showtime details, etc. %>
  
  <%= form_with(model: [@movie, @showtime, @reservation], local: true) do |form| %>
    <div>
      <%= form.label :seats, "Number of Seats" %>
      <%= form.number_field :seats, min: 1 %>
    </div>
    
    <div>
      <%= form.submit "Reserve Seats", class: "btn btn-primary" %>
    </div>
  <% end %>

<% else %>
  <p>
    Please <%= link_to 'sign in', new_user_session_path %> to reserve seats.
  </p>
<% end %>